{% extends '::base.html.twig' %}

{% block title %}Smart Event{% endblock title %}


{% block content %}
    {#<div class="title-box clearfix "><h2 class="title-box_primary">Последние статьи</h2></div>#}

    <div class="row-fluid">
        {% for article in articles %}

            <a href="{{ path('blog_article_post') }}/{{ article.articleId }}">
                <div class="span4 text">
                    {#{{ article.articleDate| date('d/m/Y') }}#}
                    <time datetime="{{ article.articleDate| date('d/m/Y') }}"><i class="icon-calendar"></i>{{ article.articleDate| date('d/m/Y') }}</time>
                    <h3> {{ article.articleTitle | raw }}</h3>
                    <p>{{ article.shortText | raw }}</p>


                </div>
            </a>
        {% endfor %}
    </div>






{% endblock content %}



